<!--components/my-tab-control/my-tab-control.wxml-->
<view class="tab-control">
  <block wx:for="{{list}}" wx:key="{{index}}">
    <view class="tab-control-item {{currIndex==index?'active':''}}"
          data-index="{{index}}" bindtap="click">
      <text>{{item}}</text>
    </view>
  </block>
</view>
